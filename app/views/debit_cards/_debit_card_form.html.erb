<div class="panel panel-default topspace-lg">
  <div class="panel-body">
    <form action="/debit_cards/create" method="POST" id="payment-form">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div id="card-errors" class="alert alert-danger"></div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label>Cardholder Name</label>
            <input class="form-control input-lg" id="name" name="name" type="text" data-stripe="name" required="required">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="card-element">Card details</label>
            <div id="card-element" class="form-control input-lg field">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <button class="btn btn-lg btn-block btn-primary btn-custom" id="submit_payment" type="submit">
            Add a card
          </button>
        </div>
      </div>
    </form>
  </div>
</div>