<%= content_for :page_title, 'Texas Togo Driver Portal | Reset your password' %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Forgot your password?</h1>
      <%= devise_error_messages! %>
      <%= render 'layouts/messages' %>
      <div class="panel panel-default topspace-lg">
        <div class="panel-body placeholder">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email address" %>
            </div>
            <div class="form-group">
              <%= f.button "Reset password", class: "btn btn-lg btn-primary btn-block btn-custom", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Resetting..."} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>